<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #3d3d3d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- En-tête -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 10 10 10;">
            <ImageView fitHeight="30" fitWidth="30">
                <!-- Image de maison -->
            </ImageView>
            <Label style="-fx-font-size: 18px;" text="Pizza Builder" textFill="white" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 22px;" text="Votre panier" textFill="white" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Centre avec les éléments du panier -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10 20 10 20;">
            <!-- Élément du panier -->
            <VBox prefHeight="180" spacing="10" style="-fx-background-color: #4d4d4d; -fx-padding: 10 10 10 10;">
                <HBox spacing="20">
                    <ImageView fitHeight="150" fitWidth="150" />
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18px;" text="NOM :" textFill="white" />
                        <Label text="Pate:" textFill="white" />
                        <Label text="Souce:" textFill="white" />
                        <Label text="Ingredients:" textFill="white" />
                        <Label text="Pâte:" textFill="white" />
                        <Label text="Components:" textFill="white" />
                        <Label text="Kcall:" textFill="white" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" spacing="10">
                  <AnchorPane prefHeight="52.0" prefWidth="200.0">
                     <children>
                              <Button layoutX="161.0" layoutY="6.0" style="-fx-font-size: 16px;" text="X" />
                     </children>
                  </AnchorPane>
                        <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="167.0" spacing="5">
                            <Button minWidth="30" text="-" />
                            <TextField maxWidth="40" prefWidth="40" text="11" />
                            <Button minWidth="30" text="+" />
                        </HBox>
                        <Label text="Prix : 100,78" textFill="white" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Deuxième élément du panier -->
            <VBox prefHeight="180" spacing="10" style="-fx-background-color: #4d4d4d; -fx-padding: 10 10 10 10;">
                <HBox spacing="20">
                    <ImageView fitHeight="150" fitWidth="150" />
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 18px;" text="Nom:" textFill="white" />
                        <Label text="Pate:" textFill="white" />
                        <Label text="Souce:" textFill="white" />
                        <Label text="Ingredients:" textFill="white" />
                        <Label text="Pâte:" textFill="white" />
                        <Label text="Components:" textFill="white" />
                        <Label text="Kcall:" textFill="white" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" spacing="10">
                        <Button style="-fx-font-size: 16px;" text="X" />
                        <HBox alignment="CENTER" spacing="5">
                            <Button minWidth="30" text="-" />
                            <TextField maxWidth="40" prefWidth="40" text="11" />
                            <Button minWidth="30" text="+" />
                        </HBox>
                        <Label text="Prix: 100,01" textFill="white" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-padding: 10 20 10 20;">
            <Label style="-fx-font-size: 16px;" text="Total à payer : 200,79" textFill="white" />
            <Button style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-size: 14px;" text="Vider le panier" />
            <Button style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-size: 14px;" text="Valider le panier" />
        </HBox>
    </bottom>

</BorderPane>
